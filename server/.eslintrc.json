{
  "extends": [
      "airbnb-base",
      "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"  
  ],
  "env": {
    "browser": false,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true
  },
  "rules": {
    "strict": 0,
    "eol-last": 0,
    "no-tabs": 0,
    "indent": ["error", "tab"],
    "max-len": [1, 120, 4]
 },
 "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
